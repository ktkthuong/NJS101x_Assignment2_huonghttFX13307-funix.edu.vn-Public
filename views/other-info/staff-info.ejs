<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css">
<style>
    .img-thumbnail {
        max-width: 40%;
        max-height: 50%;
    }
</style>
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <div class="card border-secondary m-4 container">
                <form action="/staff-info" method="POST" enctype="multipart/form-data">
                    <h2 class="card-header title">Thông Tin Nhân Viên</h2>
                    <div class="row">
                        <div class="col-lg-8 col-md-8 col-12">
                            <div class="card-body text-dark ">
                                <div class="card-text">
                                    <p><i class="fa fa-id-card"></i>
                                        <%= staffs._id %>
                                    </p>
                                </div>
                                <div class="card-text">
                                    <p><i class="fa fa-user"></i>
                                        <%= staffs.name %>
                                    </p>
                                </div>
                                <div class="card-text">
                                    <p>
                                        <i class="fa fa-birthday-cake"></i>
                                        <%= staffs.doB.getFullYear() + "/" + staffs.doB.getMonth() + "/" + staffs.doB.getDate() %>
                                    </p>
                                </div>
                                <div class="card-text">
                                    <p>
                                        <i class="fa fa-money"></i>
                                        <%= staffs.salaryScale %>
                                    </p>
                                </div>
                                <div class="card-text">
                                    <p>
                                        <i class="fa fa-tasks"></i>
                                        <%= staffs.department %>
                                    </p>
                                </div>
                                <div class="card-text">
                                    <p>
                                        <i class="fa fa-calendar"></i>
                                        <%= staffs.annualLeave %> ngày
                                    </p>
                                </div>
                                <div class="card-text">
                                    <i class="fa fa-picture-o"></i>
                                    <input type="file" name="image" />
                                </div>
                                <div class="card-text">
                                    <br>
                                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                    <button class="btn btn-success" type="submit">Chỉnh Sửa</button>
                                </div>
                            </div>                   
                        </div>
                        <div class="col-lg-4 col-md-4 col-12">
                            <img class="img-thumbnail" src="<%= staffs.image %>" alt="avatar">
                        </div>
                    </div>              
                </form>
            </div>
        </main>
        <%- include('../includes/end.ejs') %>